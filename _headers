// _headers (for Netlify) - place in public/_headers
// This file controls cache headers for GitHub Pages/Netlify deployment

# Disable caching for HTML (index.html)
/index.html
  Cache-Control: no-store, no-cache, must-revalidate, proxy-revalidate
  Pragma: no-cache
  Expires: 0

# Disable caching for JavaScript and CSS
/*.js
  Cache-Control: no-cache
  
/*.css
  Cache-Control: no-cache

# Allow caching for assets with hash (they're unique)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# API responses should never be cached
/api/*
  Cache-Control: no-store, no-cache, must-revalidate
